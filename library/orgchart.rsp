	  [, keycolumn: '] + alltrim(etos(&m_keycolumn)) + ['] + ;
	  [, backcolor: '&m_backcolor'] + ;
	  [, forecolor: '&m_forecolor'] + ;
	  [, parent: ] + etos(&m_parentid) + [},]
